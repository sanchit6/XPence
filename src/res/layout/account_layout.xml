<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#333333" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal" >

        <ImageView 
            android:id="@+id/acc_trash_button"
            android:src="@drawable/trash1" 
            android:layout_width="35dp" 
            android:layout_height="35dp"/>
        <ImageView 
            android:id="@+id/acc_edit_button"
            android:src="@drawable/edit1" 
            android:layout_marginLeft="5dp"
            android:layout_width="35dp" 
            android:layout_height="35dp"/>
        <TextView
            android:id="@+id/label_accname"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Account Name"
            android:textColor="@color/White"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/label_bank"
            android:text="Bank Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textColor="#888888" />

	</LinearLayout>
	<LinearLayout
	    android:id="@+id/acc_layout_2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/label_account_no"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="account number"
            android:textColor="#888888" />
        <TextView
            android:id="@+id/label_accid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/label_card_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="7dp"
            android:text="card number"
            android:textColor="#888888" />
    </LinearLayout>

    <View
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"
        android:visibility="visible"
         />

</LinearLayout>